@model IEnumerable<Instructor>
    

@{
    ViewData["Title"] = "Instructor List";
}

    <a class="btn btn-primary" asp-area="" asp-controller="Instructor" asp-action="AddInstructor">Add Instructor</a>

<table class="table table-dark">
    <tr>
        <th colspan="8">Instructor</th>
    </tr>
        <tr>
            <th>Name</th>
            <th>Rank</th>
            <th>Tenure</th>
            <th>Hiring Date</th>
            <th>Details</th>
        </tr>

        @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@instructor.Rank</td>
            <td>@(instructor.isTenured ? "Permanent" : "Probationary")</td>
            <td>@instructor.HiringDate</td>
            <td>
                <a class="btn btn-primary" asp-action="ShowDetail" asp-route-id="@instructor.Id">
                    Show Details
                </a>
                <a class="btn btn-secondary" asp-action="EditInstructor" asp-route-id="@instructor.Id">
                    Edit
                </a>
                <a class="btn btn-danger" asp-action="DeleteInstructor" asp-route-id="@instructor.Id">
                    Delete
                </a>
            </td>
        </tr>
    }

    </table>
