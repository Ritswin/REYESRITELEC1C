@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Output C</h1>
    <br />
    @foreach (var empl in Model)
    {
        var salaryPerDay = empl.salaryPerHour * 8;
        var salaryPerMonth = 0;

        if (empl.isTenured == true)
        {
            salaryPerMonth = (salaryPerDay * 30) + 500;
        }
        else
        {
            salaryPerMonth = salaryPerDay * 30;
        }


        <p>Name: @empl.FirstName @empl.LastName</p>
        <p>Email: @empl.Email</p>
        <p>Status: @(empl.isTenured ? "Permanent" : "Provisionary")</p>
        <p>Daily Salary: $@salaryPerDay</p>
        <p>Monthly Salary: $@salaryPerMonth</p>

        <tr>
            <td><a asp-action="Index" asp-route-id="">Output A</a></td>
            <td><a asp-action="OutputB" asp-route-id="">Output B</a></td>
            <td><a asp-action="OutputD" asp-route-id="">Output D</a></td>

        </tr>

    }

</div>
